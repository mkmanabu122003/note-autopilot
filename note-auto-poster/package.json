{
  "name": "note-auto-poster",
  "version": "0.1.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build && electron-builder --publish never",
    "build:win": "vite build && electron-builder --win --publish never",
    "build:mac": "vite build && electron-builder --mac --publish never",
    "build:linux": "vite build && electron-builder --linux --publish never",
    "pack": "vite build && electron-builder --dir --publish never",
    "test": "vitest run"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39",
    "better-sqlite3": "^11",
    "csv-parse": "^5",
    "csv-stringify": "^6",
    "electron-store": "^10",
    "node-cron": "^3",
    "playwright": "^1.49",
    "react": "^18",
    "react-dom": "^18",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4",
    "autoprefixer": "^10",
    "concurrently": "^9",
    "electron": "^33",
    "electron-builder": "^25",
    "jsdom": "^28.1.0",
    "postcss": "^8",
    "tailwindcss": "^3",
    "vite": "^6",
    "vitest": "^4.0.18",
    "wait-on": "^8"
  }
}
